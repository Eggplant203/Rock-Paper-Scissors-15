{
  "name": "rps15-arena",
  "version": "1.0.0",
  "description": "RPS-15 Arena - Real-time multiplayer Rock Paper Scissors with 15 options",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build": "npm run build:server && npm run build:client",
    "generate:stickers": "node scripts/generate-stickers.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "rock-paper-scissors",
    "game",
    "multiplayer",
    "socket.io",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
